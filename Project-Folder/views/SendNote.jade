extends BaseLayout

block content
    div(class='main')
        form(method='POST', action='/SendNote')
            label(for='reciever') Reciever:
            | #{recieverName}
            input(name='reciever', type='hidden', value='#{reciever}')
            br
            label(for='subject') Subject:
            -if(typeof(subject) !== 'undefined'){
            input(name='subject', id='subject', value='#{subject}')
            -}else{
            input(name='subject', id='subject')
            -}
            br
            label(for='message') Message:
            textarea(name='message', id='message', cols='40', rows='5')
                -if(typeof(message) !== 'undefined'){
                |#{message}
                -}
            br
            input(type='submit', value='Send Note')