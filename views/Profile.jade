extends BaseLayout

block content
    div(class="main")
        span(class="username")
            |#{user.username}
        br
        -if (typeof user.birthdate != 'undefined'){
        span(class="birthdate")
            |#{user.birthdate}  
        br
        -}
        -if (typeof user.location != 'undefined'){
        span(class='location')
            |#{user.location}
        br
        -}
        -if (typeof user.description != 'undefined'){
        span(class='description')
            |#{user.description}
        br
        -}